<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hmc.project.hmc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:name="HMCApplication">
        <activity android:name=".ui.Login" android:launchMode="standard" android:screenOrientation="unspecified">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <activity android:name=".ui.LocalServiceActivities$Binding" android:launchMode="standard" android:screenOrientation="unspecified">
        </activity>
        
        <service android:name=".service.HMCService">
            <intent-filter>
                <action android:name="com.hmc.project.hmc.service.HMCService"/>
            </intent-filter>
        </service>
        <activity android:name=".ui.HMCSettings"></activity>
    </application>
    
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>